[user]
	name = Ryan Bergeman
	email = code@ryanbergeman.com
[alias]
	ap = add --patch
	ch = checkout
	dc = diff --cached
	di = diff
	ds = diff --stat
	ff = merge --ff-only
	fixup = commit --fixup
	gl = log --extended-regexp --regexp-ignore-case --grep
	lg = log --decorate --graph --oneline
	master = checkout master
	sh = show
	squash = commit --verbose --squash
	ss = show --stat
	st = status --branch --short
[color]
	ui = auto
[fetch]
	prune = true
[push]
	default = simple
[rebase]
	autoSquash = true
[stash]
	showPatch = true
	showStat = false
